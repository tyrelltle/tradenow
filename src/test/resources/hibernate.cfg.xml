		<mapping class="com.tradenow.domains.product.Category" />
        <mapping class="com.tradenow.domains.product.Product" />
        <mapping class="com.tradenow.domains.product.Image" />
        <mapping class="com.tradenow.domains.trade.Trade" />
        <mapping class="com.tradenow.domains.notification.Notification" />
        <mapping class="com.tradenow.domains.mail.Regconfirm" />
        

    </session-factory>
	
</hibernate-configuration>